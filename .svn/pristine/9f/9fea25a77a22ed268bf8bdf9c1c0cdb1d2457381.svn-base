<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <testimonial translate="label" module="customernotification">
            <label>Testimonial</label>
            <sort_order>600</sort_order>
        </testimonial>
    </tabs>
    <sections>
        <customernotification translate="label" module="customernotification">
            <label>Customer Notification</label>
            <tab>testimonial</tab>
            <frontend_type>text</frontend_type>
            <sort_order>990</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <sms translate="label" module="customernotification">
                    <label>SMS Notification Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label comment">
                            <label>Enable SMS notification</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <payment_message_template translate="label">
                            <label>Payment Details Message Template</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </payment_message_template>
                        <consignment_message_template translate="label">
                            <label>Consignment Note Message Template</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </consignment_message_template>
                        <log_enabled translate="label comment">
                            <label>Enable SMS Log</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </log_enabled>
                    </fields>
                </sms>
            </groups>
        </customernotification>
    </sections>
</config>