<?php $manufacturers = $this->getManufacturerCollection(); ?>

<?php $_count = 0; ?>
<?php $_manufacturersCount = count($manufacturers); ?>
<?php if ($_manufacturersCount): ?>

<h1>
    <a name="serchbyavto"><?php echo Mage::helper('magedoc')->__('Please choose your vehicle make')?></a>
</h1>

    <table id="makes-grid">
        <tbody>
            <?php foreach ($manufacturers as $manufacturer): ?>
                <?php if(++$_count % $this->getColumnCount() == 1): ?>
                    <tr>                    
                <?php endif; ?>
                    <td>
                        <img alt="<?php echo $manufacturer->getTitle() ?>" src="<?php echo $this->getLogoUrl($manufacturer) ?>"/>
                        <a title="<?php echo $manufacturer->getTitle() ?>" href="<?php echo $manufacturer->getUrl() ?>"><?php echo $manufacturer->getTitle() ?></a>
                    </td>                   
                <?php if ($_count % $this->getColumnCount() == 0
                            || $_count == $_manufacturersCount): ?>
                    </tr>
                <?php endif; ?>
            <?php endforeach; ?>
        </tbody>
    </table>
<?php endif; ?>


