<layout version="0.1.0">
<!--
Default layout, loads most of the pages
-->

    <default>
        <reference name="top.static.links">
            <block type="cms/block" name="cms_top_menu">
                <action method="setBlockId"><block_id>top_menu</block_id></action>
            </block>
        </reference>
        <reference name="top.menu">
            <block type="cms/block" name="cms_top_contacts" after="top.static.links">
                <action method="setBlockId"><block_id>top_contacts</block_id></action>
            </block>
        </reference>
        <reference name="right">
            <block type="cms/block" name="cms_right_contacts">
                <action method="setBlockId"><block_id>right_contacts</block_id></action>
            </block>
        </reference>

        <reference name="footer">
            <block type="cms/block" name="cms_footer_links" as="cms_footer_links" before="footer_links">
                <action method="setBlockId"><block_id>footer_links</block_id></action>
            </block>
            <block type="cms/block" name="cms_footer_notes" as="cms_footer_notes">
                <action method="setBlockId"><block_id>apotheke_footer</block_id></action>
            </block>

        </reference>
    </default>

    <cms_page translate="label">
        <label>CMS Pages (All)</label>
        <reference name="content">
            <block type="core/template" name="page_content_heading" template="cms/content_heading.phtml"/>
            <!--<block type="enterprise_cms/hierarchy_pagination" name="hierarchy_pagination" template="cms/hierarchy/pagination.phtml"/>-->
            <block type="page/html_wrapper" name="cms.wrapper">
                <action method="setElementClass"><value>std</value></action>
                <block type="cms/page" name="cms_page"/>
            </block>
            <!--<block type="enterprise_cms/hierarchy_pagination" name="hierarchy_pagination" template="cms/hierarchy/pagination.phtml"/>-->
        </reference>
        <reference name="head">
            <!--<block type="enterprise_cms/hierarchy_head" name="enterprise_cms_hierarchy_head"></block>-->
            <action method="addCss"><stylesheet>css/cms.css</stylesheet></action>
        </reference>
    </cms_page>

    <cms_index_index translate="label">
        <label>CMS Home Page</label>
        <reference name="head">
            <action method="removeItem"><type>skin_css</type><name>css/cms.css</name></action>
        </reference>
    </cms_index_index>

    <cms_index_defaultindex>
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="core/template" name="default_home_page" template="cms/default/home.phtml"/>
        </reference>
    </cms_index_defaultindex>

    <cms_index_noroute translate="label">
        <label>CMS No-Route Page</label>
    </cms_index_noroute>

    <cms_index_defaultnoroute>
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="core/template" name="default_no_route" template="cms/default/no-route.phtml"/>
        </reference>
    </cms_index_defaultnoroute>

    <enterprise_cms_hierarchy_menu_content>
        <reference name="content">
            <block type="enterprise_cms/hierarchy_menu" name="hierarchy_menu" template="cms/hierarchy/menu.phtml" before="-"/>
        </reference>
    </enterprise_cms_hierarchy_menu_content>

    <enterprise_cms_hierarchy_menu_left_column>
        <reference name="left">
            <block type="enterprise_cms/hierarchy_menu" name="hierarchy_menu" template="cms/hierarchy/menu.phtml" before="-"/>
        </reference>
    </enterprise_cms_hierarchy_menu_left_column>

    <enterprise_cms_hierarchy_menu_right_column>
        <reference name="right">
            <block type="enterprise_cms/hierarchy_menu" name="hierarchy_menu" template="cms/hierarchy/menu.phtml" before="-"/>
        </reference>
    </enterprise_cms_hierarchy_menu_right_column>

</layout>
