<?xml version="1.0"?>
<config>
    <modules>
        <Phoenix_ProductDiscount>
            <version>0.0.1</version>
        </Phoenix_ProductDiscount>
    </modules>

    <global>
        <helpers>
            <productdiscount>
                <class>Phoenix_ProductDiscount_Helper</class>
            </productdiscount>
        </helpers>
        <blocks>
            <catalog>
                <rewrite>
                    <product_view>Phoenix_ProductDiscount_Block_Catalog_Product_View</product_view>
                    <product_view_type_simple>Phoenix_ProductDiscount_Block_Catalog_Product_View_Type_Simple</product_view_type_simple>
                    <product_list>Phoenix_ProductDiscount_Block_Catalog_Product_List</product_list>
                    <product_view_type_configurable>Phoenix_ProductDiscount_Block_Catalog_Product_View_Type_Configurable</product_view_type_configurable>
                    <product_price>Phoenix_ProductDiscount_Block_Catalog_Product_Price</product_price>
                </rewrite>
            </catalog>
            <popularproducts>
                <rewrite>
                    <widget_popular>Phoenix_ProductDiscount_Block_Catalog_Product_Widget_Popular</widget_popular>
                </rewrite>
            </popularproducts>
            <productdiscount>
                <class>Phoenix_ProductDiscount_Block</class>
            </productdiscount>
        </blocks>
    </global>

    <frontend>
        <layout>
            <updates>
                <productdiscount>
                    <file>productdiscount.xml</file>
                </productdiscount>
            </updates>
        </layout>
        <translate>
            <modules>
                <Phoenix_ProductDiscount>
                     <files>
                          <default>Phoenix_ProductDiscount.csv</default>
                     </files>
                </Phoenix_ProductDiscount>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <productdiscount>
                                            <title>Phoenix Product Discount Configuration</title>
                                        </productdiscount>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <productdiscount>
            <settings>
                <discount_euro_limit>4.99</discount_euro_limit>
                <discount_percent_limit>35</discount_percent_limit>
            </settings>
        </productdiscount>
    </default>
</config>
