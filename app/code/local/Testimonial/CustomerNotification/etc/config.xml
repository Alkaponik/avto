<?xml version="1.0"?>

<config>
    <modules>
        <Testimonial_CustomerNotification>
            <version>0.3.0</version>
        </Testimonial_CustomerNotification>
    </modules>
    <global>
        <models>
            <customernotification>
                <class>Testimonial_CustomerNotification_Model</class>
                <resourceModel>customernotification_resource</resourceModel>
            </customernotification>
            <customernotification_resource>
                <class>Testimonial_CustomerNotification_Model_Resource</class>
                <entities>
                    <message>
                        <table>customernotification_message</table>
                    </message>
                </entities>
            </customernotification_resource>
        </models>
        <blocks>
            <customernotification>
                <class>Testimonial_CustomerNotification_Block</class>
            </customernotification>
        </blocks>
        <helpers>
            <customernotification>
                <class>Testimonial_CustomerNotification_Helper</class>
            </customernotification>
        </helpers>
        <resources>
            <customernotification_setup>
                <setup>
                    <module>Testimonial_CustomerNotification</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </customernotification_setup>
        </resources>
        <events>
            <sales_order_shipment_track_save_before>
                <observers>
                    <customernotification>
                        <class>customernotification/observer</class>
                        <type>singleton</type>
                        <method>sales_order_shipment_track_save_before</method>
                    </customernotification>
                </observers>
            </sales_order_shipment_track_save_before>
            <customer_notified_by_sms>
                <observers>
                    <customernotification>
                        <class>customernotification/observer</class>
                        <type>singleton</type>
                        <method>customer_notified_by_sms</method>
                    </customernotification>
                </observers>
            </customer_notified_by_sms>
        </events>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <customernotification>
                    <file>customernotification.xml</file>
                </customernotification>
            </updates>
        </layout>
        <translate>
            <modules>
                <Testimonial_CustomerNotification>
                    <files>
                        <default>Testimonial_CustomerNotification.csv</default>
                    </files>
                </Testimonial_CustomerNotification>
            </modules>
        </translate>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <customernotification before="Mage_Adminhtml">Testimonial_CustomerNotification_Adminhtml</customernotification>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>
