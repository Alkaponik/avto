<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Testimonial_CallBackRequest>
            <version>0.1.0</version>
        </Testimonial_CallBackRequest>
    </modules>

    <frontend>
        <layout>
            <updates>
                <callbackrequest>
                    <file>CallBackRequest.xml</file>
                </callbackrequest>
            </updates>
        </layout>
        <routers>
            <callbackrequest>
                <use>standard</use>
                <args>
                    <module>Testimonial_CallBackRequest</module>
                    <frontName>callbackrequest</frontName>
                </args>
            </callbackrequest>
        </routers>
        <translate>
            <modules>
                <Testimonial_CallBackRequest>
                    <files>
                        <default>Testimonial_CallBackRequest.csv</default>
                    </files>
                </Testimonial_CallBackRequest>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <callbackrequest before="Mage_Adminhtml">Testimonial_CallBackRequest_Adminhtml</callbackrequest>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <callbackrequest>
                    <file>CallBackRequest.xml</file>
                </callbackrequest>
            </updates>
        </layout>
        <translate>
            <modules>
                <Testimonial_CallBackRequest>
                    <files>
                        <default>Testimonial_CallBackRequest.csv</default>
                    </files>
                </Testimonial_CallBackRequest>
            </modules>
        </translate>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<callbackrequest translate="title" module="callbackrequest">
											<title>Call Back Request</title>
										</callbackrequest>
									</children>
								</config>
							</children>
                            <children>
                                <promo>
                                    <children>
                                        <callbackrequest translate="title" module="callbackrequest">
                                            <title>Call Back Request</title>
                                        </callbackrequest>
                                    </children>
                                </promo>
                            </children>
                        </system>
					</children>
				</admin>
			</resources>
		</acl>
    </adminhtml>

    <global>
        <models>
            <callbackrequest>
                <class>Testimonial_CallBackRequest_Model</class>
                <resourceModel>callbackrequest_resource</resourceModel>
            </callbackrequest>
            <callbackrequest_resource>
                <class>Testimonial_CallBackRequest_Model_Resource</class>
                <entities>
                    <request>
                        <table>callbackrequest_request</table>
                    </request>
                </entities>
            </callbackrequest_resource>
        </models>
        <resources>
            <callbackrequest_setup>
                <setup>
                    <module>Testimonial_CallBackRequest</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </callbackrequest_setup>
            <callbackrequest_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </callbackrequest_write>
            <callbackrequest_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </callbackrequest_read>
        </resources>
        <blocks>
            <callbackrequest>
                <class>Testimonial_CallBackRequest_Block</class>
            </callbackrequest>
        </blocks>
        <helpers>
            <callbackrequest>
                <class>Testimonial_CallBackRequest_Helper</class>
            </callbackrequest>
        </helpers>
        <template>
            <email>
                <callbackrequest_general_email_template translate="label" module="callbackrequest">
                    <label>Call Back Request</label>
                    <file>callbackrequest/callback_form.html</file>
                    <type>html</type>
                </callbackrequest_general_email_template>
            </email>
        </template>
    </global>

    <default>
        <callbackrequest>
            <general>
                <recipient_email><![CDATA[hello@example.com]]></recipient_email>
                <sender_email_identity>Shop</sender_email_identity>
                <email_template>callbackrequest_general_email_template</email_template>
            </general>
        </callbackrequest>
    </default>
</config>