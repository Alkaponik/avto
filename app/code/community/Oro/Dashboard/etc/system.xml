<config>
    <sections>
        <oro_dashboard translate="label" module="oro_dashboard">
            <label>Dashboards</label>
            <tab>general</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <min_date translate="label">
                            <label>Min Date</label>
                            <frontend_type>date</frontend_type>
                            <frontend_model>oro_dashboard/adminhtml_system_config_date</frontend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </min_date>
                        <partitioning translate="label">
                            <label>Use MySql Partitioning</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0s</show_in_store>
                        </partitioning>
                    </fields>
                </general>
            </groups>
        </oro_dashboard>
    </sections>
</config>
