<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
		<catalog>
		    <groups>
		        <phoenixbrands translate="label" module="phoenixbrands">
		            <label>Phoenix Brands</label>
		            <frontend_type>text</frontend_type>
		            <sort_order>99</sort_order>
		            <show_in_default>1</show_in_default>
		            <show_in_website>1</show_in_website>
		            <show_in_store>1</show_in_store>
		            <fields>
		                <generate_categories translate="label">
                            <label></label>
                            <frontend_model>phoenixbrands/adminhtml_frontendModel_generateCategories</frontend_model>
                            <source_model>phoenixbrands/adminhtml_system_config_source_category</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>0</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>1</show_in_store>
                        </generate_categories>
		                <brands_root_category_id translate="label comment">
		                    <label>Brands' root category</label>
		                    <comment>Specify the category which contains all the brands of the current store</comment>
		                    <frontend_type>select</frontend_type>
		                    <source_model>phoenixbrands/adminhtml_system_config_source_category</source_model>
		                    <sort_order>1</sort_order>
		                    <show_in_default>0</show_in_default>
		                    <show_in_website>0</show_in_website>
		                    <show_in_store>1</show_in_store>
		                </brands_root_category_id>
		                <outlet_category_id translate="label comment">
		                    <label>Outlet category</label>
		                    <comment>Specify the outlet category</comment>
		                    <frontend_type>select</frontend_type>
		                    <source_model>phoenixbrands/adminhtml_system_config_source_category</source_model>
		                    <sort_order>10</sort_order>
		                    <show_in_default>0</show_in_default>
		                    <show_in_website>0</show_in_website>
		                    <show_in_store>1</show_in_store>
		                </outlet_category_id>
		                <brands_sidebar_num translate="label comment">
		                    <label>Number of brands in a sidebar block</label>
		                    <comment>Set 0 to display all</comment>
		                    <frontend_type>text</frontend_type>
		                    <sort_order>20</sort_order>
		                    <show_in_default>1</show_in_default>
		                    <show_in_website>1</show_in_website>
		                    <show_in_store>1</show_in_store>
		                </brands_sidebar_num>
		                <!--<brands_show_brands_withproducts_only translate="label">
		                    <label>Show brands with products Only</label>
		                    <frontend_type>select</frontend_type>
		                    <source_model>adminhtml/system_config_source_yesno</source_model>
		                    <sort_order>30</sort_order>
		                    <show_in_default>1</show_in_default>
		                    <show_in_website>1</show_in_website>
		                    <show_in_store>1</show_in_store>
		                </brands_show_brands_withproducts_only>-->
		                <brands_featured_num translate="label comment">
                            <label>Number of featured brands</label>
                            <comment>Set 0 to display all</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </brands_featured_num>
                        <brands_columns translate="label">
                            <label>Number of columns in brands list</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </brands_columns>
                        <brands_attribute translate="label">
                            <label>Attribute for manufacturers</label>
                            <frontend_type>select</frontend_type>
                            <source_model>phoenixbrands/adminhtml_system_config_source_attributes</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </brands_attribute>
                        <sidebar_list_position translate="label">
                            <label>Sidebar featured brands position</label>
                            <frontend_type>select</frontend_type>
                            <source_model>phoenixbrands/adminhtml_system_config_source_position</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sidebar_list_position>
                        <sidebar_logo_position translate="label">
                            <label>Sidebar brand logo position</label>
                            <frontend_type>select</frontend_type>
                            <source_model>phoenixbrands/adminhtml_system_config_source_position</source_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sidebar_logo_position>
		            </fields>
		        </phoenixbrands>
		    </groups>
		</catalog>
    </sections>
</config>