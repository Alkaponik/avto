<h1><?php echo $this->__('My Product Reviews') ?></h1>
<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<?php if( $this->getCollection() && $this->count()): ?>
	<?php echo $this->getToolbarHtml() ?>
		<table class="cart-table" id="my-reviews-table">
			<tbody>
				<?php foreach ($this->getCollection() as $_review): ?>
				<tr>
					<td><?php echo $this->dateFormat($_review->getCreatedAt()) ?></td>
					<td class="cart-item-name"><a href="<?php echo $this->getProductLink() ?>id/<?php echo $_review->getEntityPkValue() ?>" title="<?php echo $this->htmlEscape($_review->getName()) ?>"><?php echo $this->htmlEscape($_review->getName()) ?></a></td>
					<td>
					<?php if($_review->getSum()): ?>
						<div class="rating-box">
							<div class="rating" style="width:<?php echo ( $_review->getSum() / $_review->getCount() ) ?>%;"></div>
						</div>
					<?php endif; ?>
					</td>
					<td><?php echo $this->htmlEscape($this->helper('review')->getDetail($_review->getDetail())) ?></td>
					<td><a href="<?php echo $this->getReviewLink() ?>id/<?php echo $_review->getReviewId() ?>"><?php echo $this->__('View Details') ?></a></td>
				</tr>
				<?php endforeach; ?>
			</tbody>
		</table>
	<?php echo $this->getToolbarHtml() ?>
<?php else: ?>
	<p><?php echo $this->__('You have submitted no reviews.') ?></p>
<?php endif; ?>
<p class="bottom-links"><a href="<?php echo $this->escapeUrl($this->getBackUrl()) ?>" title="<?php echo $this->__('Back') ?>" class="link link-back"><?php echo $this->__('Back') ?></a></p>