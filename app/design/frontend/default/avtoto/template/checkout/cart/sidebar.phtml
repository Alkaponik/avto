/**
 * Shoping cart sidebar
 *
 * @see Mage_Checkout_Block_Cart_Sidebar
 */
?>
<div class="block skip-content" id="block-cart">
    <?php $_cartQty = $this->getSummaryCount() ?>
    <h4><?php echo $this->__('My Cart') ?></h4>
	<p class="cartinfo<?php if($_cartQty == 0): ?> empty<?php endif; ?>">
		<span class="hint">
		<?php
			if($_cartQty == 0)
			{
				echo $this->__('Your cart contains <strong>no items</strong>');
			}
			elseif($_cartQty==1)
			{
				echo $this->__('Your cart contains <strong>1 item</strong>');
			}
			else
			{
				echo $this->__('Your cart contains <strong>%s items</strong>', $_cartQty);
			}
		?>
		</span><br />
		<?php echo Mage::helper('checkout')->formatPrice($this->getSubtotal()) ?><?php if ($_subtotalInclTax = $this->getSubtotalInclTax()): ?> / <?php echo Mage::helper('checkout')->formatPrice($_subtotalInclTax) ?> <?php echo Mage::helper('tax')->getIncExcText(true) ?><?php endif; ?>
	</p>
	
	<?php if($this->isPossibleOnepageCheckout()): ?>
	<button class="btn" type="button" onclick="setLocation('<?php echo $this->getUrl('checkout/cart') ?>')" title="Warenkorb ansehen / Zur Kasse"><span>Warenkorb / Kasse</span></button>
	<?php endif ?>
	
	<?php if (Mage::getSingleton('customer/session')->isLoggedIn()): ?>
	<p class="wishlistlink">
		<a href="<?php echo Mage::helper('wishlist')->getListUrl() ?>" class="link" rel="nofollow"><?php echo Mage::helper('wishlist')->__('My Wishlist') ?></a>
	</p>
	<?php endif; ?>
</div>
