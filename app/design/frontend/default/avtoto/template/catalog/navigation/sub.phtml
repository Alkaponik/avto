/**
 * Category left navigation
 *
 * @see Mage_Catalog_Block_Navigation
 */
?>
<?php
$_category = $this->getCurrentCategory();
//$collection = Mage::getModel('catalog/category')->getCategories($_category->getId());
// get all children
if (Mage::helper('catalog/category_flat')->isEnabled()) {
	$collection = (array)$_category->getChildrenCategories();
	$childrenCount = count($collection);
} else {
	$collection = $_category->getChildrenCategories();
	$childrenCount = $collection->count();
}
$helper = Mage::helper('catalog/category');
?>
<?php if ($childrenCount > 0) :?>
<ul id="subcategory" class="rnd">
<?php foreach ($collection as $cat):?>
	<?php if($cat->getIsActive()):?>
	<li><a href="<?php echo $helper->getCategoryUrl($cat);?>" title="<?php echo $cat->getName();?> Apotheke"><?php echo $cat->getName();?></a></li>
	<?php endif?>
<?php endforeach;?>
</ul>
<?php endif;?>